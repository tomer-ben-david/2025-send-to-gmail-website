  {name === "text" && (
    <>
      <path d="M4 7V4h16v3" />
      <path d="M9 20h6" />
      <path d="M12 4v16" />
    </>
  )}

  {name === "app" && (
    <>
      <rect x="3" y="5" width="18" height="14" rx="2" />
