      <path d="M9 20a6 6 0 0 1 6-4 6 6 0 0 1 6 4" />
    </>
  )}

  {name === "template" && (
    <>
      <rect x="4" y="5" width="16" height="14" rx="2" />
      <path d="M4 10h16" />
      <path d="M10 10v9" />
    </>
  )}

  {name === "chart" && (
    <>
      <path d="M4 19V5" />
      <path d="M4 19h16" />
      <path d="M8 17v-6" />
      <path d="M12 17v-9" />
      <path d="M16 17v-4" />
    </>
  )}

  {name === "lock" && (
    <>
      <rect x="6" y="11" width="12" height="10" rx="2" />
      <path d="M8 11V8a4 4 0 1 1 8 0v3" />
      <path d="M12 16v2" />
    </>
  )}

  {name === "check" && (
    <>
      <path d="M20 6L9 17l-5-5" />
