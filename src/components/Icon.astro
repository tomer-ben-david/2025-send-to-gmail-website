      <path d="M14 10l2-2" />
      <path d="M10 14l-2 2" />
      <path d="M14 14l2 2" />
    </>
  )}

  {name === "archive" && (
    <>
      <rect x="4" y="7" width="16" height="13" rx="2" />
      <path d="M4 7l2-3h12l2 3" />
      <path d="M9 12h6" />
    </>
  )}

  {name === "bubble" && (
    <>
      <path d="M5 6h14a2 2 0 0 1 2 2v7a2 2 0 0 1-2 2H10l-4 3v-3H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2z" />
    </>
  )}

  {name === "users" && (
    <>
